@model Admin.Models.MetaListModel

@{
    ViewBag.Title = Model.Id == Guid.Empty ? Resources.Resource.CreateObject : (Resources.Resource.Edit + " " + Model.Name);
    Html.EnableClientValidation(true);
}

<div>
    @Html.ActionLink(Resources.Resource.Back, "Index")
</div>

<br />

@using (Html.BeginForm("Edit", "MetaList", FormMethod.Post))
{
    @Html.ValidationSummary(true, Resources.Resource.ErrorInFields)
    <fieldset>
        @Html.HiddenFor(model => model.Id)
        <label>@Resources.Resource.List</label>
        <section>
            @Html.LabelFor(model => model.Name, @<span class="required">&nbsp;</span>)
            <div>
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </section> 
        <section>
            @Html.LabelFor(model => model.List, @<span class="required">&nbsp;</span>)
            <div>
                @Html.TextAreaFor(model => model.List)
                @Html.ValidationMessageFor(model => model.List)
                <span>@Resources.Resource.ListFormat</span>
            </div>
        </section>           
    </fieldset>
    <fieldset>
        <section>
            <div>
                <button name="button" onclick=" SaveGrids() " class="fr submit" value="SaveAndExit">@Resources.Resource.SaveExit</button>
                <button name="button" onclick=" SaveGrids() " class="fr submit" value="Save">@Resources.Resource.Save</button>
            </div>
        </section>
    </fieldset>
}  
<div>
    @Html.ActionLink(Resources.Resource.Back, "Index")
</div>

<script>
    function SaveGrids() {
        var grid = $('#CredentialGrid');
        if (grid != undefined) {
            grid.data('tGrid').submitChanges();
        }
        return true;
    }
</script>