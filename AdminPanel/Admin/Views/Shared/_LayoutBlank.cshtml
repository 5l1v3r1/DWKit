@{
    ViewBag.Title = string.Format("{0} :: {1}", Admin.DAL.Settings.ApplicationName, ViewBag.Title);
}
<!DOCTYPE html>

<html>
    <head>
        <meta charset="utf-8">
        <title>@ViewBag.Title</title>
        <!-- Apple iOS and Android stuff -->
        <meta name="apple-mobile-web-app-capable" content="yes">
        <meta name="apple-mobile-web-app-status-bar-style" content="black">
        <link rel="apple-touch-icon-precomposed" href="img/icon.png">
        <link rel="apple-touch-startup-image" href="img/startup.png">
        <meta name="viewport" content="width=device-width,initial-scale=1,user-scalable=no,maximum-scale=1">
        <!-- Google Font and style definitions -->
        <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=PT+Sans:regular,bold">
        <link href="@Url.Content("~/Content/css/style.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
        <!-- include the skins (change to dark if you like) -->
        <link rel="stylesheet" href="@Url.Content("~/Content/css/light/theme.css")" id="themestyle" />
        <!-- <link rel="stylesheet" href="css/dark/theme.css" id="themestyle"> -->
        <!--[if lt IE 9]>
            <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"> </script>
            <link rel="stylesheet" href="css/ie.css">
        <![endif]-->
        <!-- Use Google CDN for jQuery and jQuery UI -->
        <script src="@Url.Content("~/Scripts/jquery.js")" type="text/javascript"> </script>
        <script src="@Url.Content("~/Scripts/jquery-ui.js")" type="text/javascript"> </script>
        <script src="@Url.Content("~/Content/js/functions.js")"> </script>
        <script src="@Url.Content("~/Content/js/plugins.js")"> </script>
        <script src="@Url.Content("~/Content/js/wl_Alert.js")"> </script>
        <script src="@Url.Content("~/Content/js/wl_Dialog.js")"> </script>
        <script src="@Url.Content("~/Content/js/wl_Form.js")"> </script>
        <script src="@Url.Content("~/Content/js/config.js")"> </script>
        <script src="@Url.Content("~/Content/js/login.js")"> </script>
    </head>
    <body id="login">
        <div id="pageoptions">
            <ul>
                @*<li>@Html.Partial("_LogOnPartial")</li>*@
                <li>@Html.Partial("Menu/Lang")</li>
                @*<li>@Html.ActionLink("Register", "Register")</li>*@
                @*<li><a href="http://optimajet.com">About</a></li>*@

            </ul>		   
        </div>
        <header>
            <div id="logo">
                @Html.ActionLink("Home", "Index", "Home")
            </div>
        </header>
        <section id="content">
            @RenderBody()
        </section>
        <footer>@*Copyright by <a href="http://optimajet.com">OptimaJet.com</a> @DateTime.Now.Year*@</footer>
    </body>
</html>