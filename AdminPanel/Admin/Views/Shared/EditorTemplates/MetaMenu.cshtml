@using Admin.Helpers
@using OptimaJet.Meta.Objects
@model object

@Html.DevExpress().ComboBox(
    settings =>
    {
        CurrentSettings.LoadComboBoxSettings(settings, ViewData, Url.Action("Edit", "MetaMenu"));
        settings.CallbackRouteValues = new { Controller = "MetaMenu", Action = "EditorCombox", PropertyName = ViewData.ModelMetadata.PropertyName, IsNullableValueType = ViewData.ModelMetadata.IsNullableValueType };
        settings.Properties.Columns.Add("Name", Resources.Resource.Name);
        settings.Properties.Columns.Add("Type.Name", Resources.Resource.Type);
        settings.Properties.Columns.Add("SortOrder", Resources.Resource.SortOrder);
        settings.Properties.Columns.Add("Form.Name", Resources.Resource.Form);
    }
               ).BindList(MetaMenuHelper.GetAll()).Bind(Model).GetHtml()