@using Admin.Helpers
@using OptimaJet.Meta
@using OptimaJet.Meta.Objects
@model object

@Html.DevExpress().ComboBox(
    settings =>
        {
            settings.Name = "MetaViewExternalMethodType";
            settings.Properties.AllowUserInput = false;
            settings.Properties.ValueField = "Id";
            settings.Properties.ValueType = typeof(byte);
            settings.Properties.DropDownStyle = DropDownStyle.DropDown;
            settings.Properties.NullDisplayText = "";
            settings.Properties.TextField = "Name";
            settings.Properties.Columns.Add("Name", Resources.Resource.Name);
            settings.Properties.ClientSideEvents.ValueChanged =
              string.Format("function(){{ $('#{0}').val({1}.GetValue()); }}",
                            "TypeId",
                            settings.Name);

        }
     ).BindList(ExternalMethodHelper.CurrentTypeListView).Bind(Model).GetHtml()