@model Admin.Models.ChangePasswordModel

@{
    ViewBag.Title = "Смена пароля";
    Layout = "~/Views/Shared/_LayoutBlank.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"> </script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"> </script>

@Html.ValidationSummary(true, "Password change was unsuccessful. Please correct the errors and try again.")


@using (Html.BeginForm())
{
    <fieldset>
        <section>
            @Html.LabelFor(m => m.OldPassword)
            <div>
                @Html.PasswordFor(m => m.OldPassword, new {@id = "OldPassword", @name = "OldPassword", @autofocus = ""})
                @Html.ValidationMessageFor(m => m.OldPassword)
            </div>
        </section>
        <section>
            @Html.LabelFor(m => m.NewPassword)
            <div>
                @Html.PasswordFor(m => m.NewPassword, new {@id = "NewPassword", @name = "NewPassword", @autofocus = ""})
                @Html.ValidationMessageFor(m => m.NewPassword)
            </div>
        </section>
        <section>
            @Html.LabelFor(m => m.ConfirmPassword)
            <div>
                @Html.PasswordFor(m => m.ConfirmPassword, new {@id = "ConfirmPassword", @name = "ConfirmPassword", @autofocus = ""})
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>
        </section>
        <section>
            <div>                
                <div><button type="submit" class="fr submit">Change password</button></div>
            </div>
        </section>        
    </fieldset>
}