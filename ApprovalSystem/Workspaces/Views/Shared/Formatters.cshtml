@using System.Globalization
@{
    var profile = OptimaJet.BJet.CommonSettings.Profile;
    
    var decimalSeparator = CultureInfo.CurrentCulture.NumberFormat.NumberDecimalSeparator;
    if(profile != null && !string.IsNullOrWhiteSpace(profile.DecimalSeparator))
    {
        decimalSeparator = profile.DecimalSeparator;
    }

    var thousandSeparator = decimalSeparator == "." ? "," : " ";
}
<script type="text/javascript">
    Ext.onReady(function () {
        Ext.util.Format.decimalSeparator = '@decimalSeparator';
        Ext.util.Format.thousandSeparator = '@thousandSeparator';
    });
</script>